{
    "version": "0.2.0",
    "configurations": [
      {
        "type": "node",
        "request": "launch",
        "name": "NestJS: Debug API",
        "skipFiles": ["<node_internals>/**"],
        "program": "${workspaceFolder}/src/main.ts",
        "runtimeArgs": [
          "-r",
          "tsconfig-paths/register",
          "-r",
          "ts-node/register"
        ],
        "env": {
          "NODE_ENV": "development"
        },
       
        "console": "integratedTerminal",
        "internalConsoleOptions": "neverOpen"
      }
    ]
  }